<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.karthikeyantkr.weather.DetailsActivity">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewCurLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text"/>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/textViewCurLoc"
            android:background="@android:color/black"
            android:layout_marginTop="52dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:layout_centerInParent="true"
        android:weightSum="1">


        <ImageView
            android:id="@+id/imageViewdimg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/view"
            android:layout_marginLeft="130dp"

             />


        <TextView
            android:id="@+id/textViewdDegree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewdimg"
            android:layout_centerHorizontal="true"
            android:paddingLeft="135dp"
            android:paddingTop="10dp"
            android:text="t1"

            />

        <TextView
            android:id="@+id/textViewdCloudy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewdDegree"
            android:layout_centerHorizontal="true"
            android:paddingLeft="120dp"
            android:paddingTop="10dp"
            android:text="t2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/tt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear2"
                android:paddingLeft="50dp"
                android:text="Max Temperature:" />

            <TextView
                android:id="@+id/maxTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingLeft="20dp"
                android:layout_below="@+id/textView3"
                android:text="New Text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/tt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear2"
                android:paddingLeft="50dp"
                android:text="Min Temperature:" />

            <TextView
                android:id="@+id/minTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingLeft="20dp"
                android:layout_below="@+id/textView3"
                android:text="New Text" />

        </LinearLayout>
        <View
            android:id="@+id/view2"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/textViewdCloudy"
            android:background="@android:color/black"
            android:paddingTop="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2"
        android:orientation="vertical"
        android:paddingTop="20dp"

        android:layout_centerInParent="true">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear2"
                android:text="Feels Like:" />

            <TextView
                android:id="@+id/textView_dfeelslike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
               android:paddingLeft="30dp"
                android:layout_below="@+id/textView3"
                android:text="New Text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/textView_dfeelslike"
                android:text="Humidity:" />

            <TextView
                android:id="@+id/textView_dhumidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="35dp"

                android:layout_below="@+id/textView5"
                android:text="New Text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/textView_dhumidity"
                android:text="Dewpoint:" />

            <TextView
                android:id="@+id/textView_ddew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="33dp"
                android:layout_below="@+id/textView7"
                android:text="New Text" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear2"
                android:layout_centerHorizontal="true"
                android:text="Pressure:" />

            <TextView
                android:id="@+id/textView_dpressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView5"
                android:paddingLeft="35dp"
                android:text="New Text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_dpressure"
                android:layout_centerHorizontal="true"
                android:text="Clouds:" />

            <TextView
                android:id="@+id/textView_dcloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="47dp"
                android:layout_alignTop="@+id/textView_dhumidity"
                android:text="New Text" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_dcloud"
                android:text="Winds:" />

            <TextView
                android:id="@+id/textView_dwinds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="49dp"
                android:layout_below="@+id/textView13"
                android:text="New Text" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
